//- main.pug
extends layout/layout.pug
block content
  div(style="display: flex; flex-direction:column; justify-content: center; align-items:center; background-color:white; width: 50%; margin: 0 auto;")
    div(style="background-color:black;width:100%")
      h1(style="color:white; text-align:center;") PRODUCTOS
    
    if productos.length >0
      
      div(style="display:flex; margin-top: 20px; flex-direction:column; align-items:center; width: 100%;")
        div(style="width: 80%; background-color: gray; display: flex; justify-content:space-evenly; align-items: center; padding: 10px")
          div(style="flex: 1; text-align:center; color: white;") id
          div(style="flex: 3; text-align:center; color: white;") Title
          div(style="flex: 2; text-align:center; color: white;") Price
          div(style="flex: 2; text-align:center; color: white;") Image
        each product in productos
          div(style="width: 80%;padding: 3px 0; display: flex; justify-content:space-evenly; align-items: center;")
            div(style="flex: 1; text-align:center") #{product.id} 
            div(style="flex: 3; text-align:center") #{product.title} 
            div(style="flex: 2; text-align:center") #{product.price} 
            div(style="flex: 2; text-align:center;")
              img(style="max-width: 36px;" src=product.thumbnail alt="")  
    else
            p No hay Productos disponibles

    div(style="width: 100%; display: flex; justify-content:flex-end")
      a(style="background-color: black; color:white; padding: 5px; margin: 10px; text-decoration:none;" href="/api/productos/product-form") Nuevo Producto